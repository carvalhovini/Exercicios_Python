//Escreva um programa que encontre todos os n√∫meros perfeitos entre 1 e 1000.

def is_perfect(n):
    divisors = [1]
    for i in range(2, int(n ** 0.5) + 1):
        if n % i == 0:
            divisors.append(i)
            divisors.append(n // i)
    divisors = sum(divisors)
    return divisors == n

for i in range(1, 1001):
    if is_perfect(i):
        print(i)
